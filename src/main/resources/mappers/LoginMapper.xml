<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.portfolio.defshopYG.user.UserMapper">

    <insert id="joinUser">
        INSERT INTO def_user
        (iuser, nm, phone, uid, upw, email, nickname, gender)
        VALUES
        (#{iuser}, #{nm}, #{phone}, #{uid}, #{upw}, #{email}, #{nickname}, #{gender})
    </insert>

    <select id="loginComplet" resultType="UserEntity">
        SELECT *
        FROM def_user
        WHERE uid = #{uid}
    </select>
</mapper>