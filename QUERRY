-------종합페이지--------
CREATE TABLE def_board_main(
	iboard INT UNSIGNED AUTO_INCREMENT PRIMARY KEY,
	writer INT UNSIGNED NOT NULL,
	ctnt VARCHAR(2000) NOT NULL,
	domNm VARCHAR(40) NOT NULL,
	domImg VARCHAR(100),
	domCurBuy VARCHAR(20) NOT NULL,
	domImBuy VARCHAR(20) NOT NULL,
	hit INT UNSIGNED NOT NULL DEFAULT 0,
	rdt DATETIME DEFAULT NOW(),
	mdt DATETIME DEFAULT NOW(),
	FOREIGN KEY (writer) REFERENCES def_user(iuser)
);

