-------회원 테이블--------
CREATE TABLE def_user(
	iuser INT UNSIGNED AUTO_INCREMENT PRIMARY KEY,
	nm VARCHAR(5) NOT NULL,
	phone VARCHAR (20) UNIQUE NOT NULL,
	uid VARCHAR(20) UNIQUE NOT NULL,
	upw VARCHAR(200) NOT NULL,
	email VARCHAR(300) UNIQUE NOT NULL,
	profileImg VARCHAR(100),
	address_post int(5) NOT NULL,
	address_primary VARCHAR(100) NOT NULL,
	address_secondary VARCHAR(100),
	check TINYINT UNSIGNED CHECK(gender IN (0, 1)),
	nickname VARCHAR(70) UNIQUE,
	rdt DATETIME DEFAULT NOW()
);

------레벨테이블-------

CREATE TABLE def_user_level(
    user_level INT(10) UNSIGNED,
    user_level_bar INT(3000) UNSIGNED
);

